<section class="form-container">
<div  class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade" uk-height-viewport>
    <div class="uk-width-1-1">
        <div class="uk-container" >
            <div class="uk-grid-margin uk-grid uk-grid-stack">
                <div class="uk-width-1-1@m">
                    <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-medium">


                        <h3 class="uk-card-title uk-text-center" style="margin-bottom: ">Cuéntanos lo que quieras</h3>

                        <form action="/auth/login" method="POST" id="form-login">


                            <div class="uk-margin">
                                <label class="" for="form-stacked-text">Nombre</label>
                                <div class="uk-form-controls">
                                    <input placeholder="ej. Pepe Pecas" class="uk-input" type="text">
                                </div>

                                <div class="uk-margin">
                                    <label class="" for="form-stacked-text">Correo electrónico</label>
                                    <div class="uk-form-controls">
                                        <input placeholder="ej. pepepecas@fudgeyeah.com" class="uk-input" type="email">
                                    </div>

                                    <div class="uk-margin">
                                        <textarea placeholder="Cuéntanos algo..." class="uk-textarea" rows="5" type="text"></textarea>
                                    </div>


                            <div class="uk-margin" style="display: flex; justify-content:center">
                                <button type="submit" class="uk-button uk-button-primary uk-button-medium uk-width-1-2@s boton-form">Enviar</button>
                            </div>
                            <div class="uk-text-small uk-text-center">
                                ¿No estás registrado? <a href="/auth/signup">Crea una cuenta</a>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
